@model IEnumerable<KhMedium.Entities.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutStart.cshtml";
}

@Html.ActionLink("បង្កើត", "Create", "Authors", new {@Class = "btn btn-info pull-right"})
<br/>
<br/>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">បញ្ជីអ្នកនិពន្ធ</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsives">
        <table id="dataTableCategory" class="table table-bordered table-striped dataTable ">
            <thead>

            <tr>
                <th>
                    លេខរៀង
                </th>
                <th>
                    ឈ្មោះ
                </th>
                <th>
                    អំពី
                </th>
                <th>
                    រូបភាព
                </th>
                <th style="width: 20%">សកម្មភាព</th>
            </tr>
            </thead>
            <tbody>
            @for (var i = 1; i <= Model.Count(); i++)
            {
                var category = Model.ToList()[i - 1];
                <tr>
                    <td>@i</td>
                    <td>@category.Name</td>
                    <td>@category.Bio</td>
                    <td>
                        <img src="~/FileUpload/@category.ProfilePicture" width="40" height="40"/>
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("មើល", "Details", new { id = category.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("កែប្រែ", "Edits", new { id = category.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("លុប", "Delete", new { id = category.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
            </tbody>

        </table>
    </div>
    <!-- /.box-body -->
</div>

@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function() {
        $('#dataTableCategory').DataTable({
            "order": [[0, "asc"]]
        });
    });
</script>