@model KhMedium.Entities.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutStart.cshtml";
}


<br />
@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    {
        @Html.ValidationSummary(true)
        {
            <div class="row">
                <div class="col-sm-6">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">បង្កើតប្រភេទ</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                @Html.Label("ឈ្មោះ")
                                @Html.EditorFor(model => model.Name,new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="box-footer">
                                @Html.ActionLink("បោះបង់", "Index", "Category", new { @Class = "btn btn-default" })
                                <button type="submit" class="btn btn-info pull-right">រក្សាទុក</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}