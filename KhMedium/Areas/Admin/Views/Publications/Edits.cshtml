@model KhMedium.Entities.Publication

@{
    ViewBag.Title = "Edits";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutStart.cshtml";
}

<br />
@using (Html.BeginForm("Edits", "Publications", FormMethod.Post, new { @Class = "form-horizontal" }))
{
    DateTime date = DateTime.Now;
    @Html.AntiForgeryToken()
    {
        @Html.ValidationSummary(true)
        {
            @Html.HiddenFor(model => model.CreatedAt)
            <div class="row">
                <div class="col-sm-6">
                    <div class="box box-info">
                        <div class="box-header">
                            <h3 class="box-title">កែប្រែសាធារណៈជន</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                @Html.Label("ឈ្មោះ", htmlAttributes: new { @class = " col-md-3" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("ការពិពណ៌នា", htmlAttributes: new { @class = "col-md-3" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("ទំនាក់ទំនង", htmlAttributes: new { @class = "col-md-3" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ContactInfo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ContactInfo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("គម្រប", htmlAttributes: new { @class = "col-md-3" })
                                <div class="col-md-10">
                                    <input type="file" name="avatar" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("ស្លាកសញ្ញា", htmlAttributes: new { @class = "col-md-3" })
                                <div class="col-md-10">
                                    @*@Html.EditorFor(model => model.Logo, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @*@Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })*@
                                    <input type="file" name="cv" class="form-control" />

                                </div>
                            </div>

                        </div>
                        <div class="box-footer">
                            @Html.ActionLink("បោះបង់", "Index", new { @Class = "btn btn-default" })
                            <button type="submit" class="btn btn-info pull-right">រក្សាទុក</button>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Logo)
                        @Html.HiddenFor(model => model.Cover)
                    </div>
                </div>
            </div>
        }
    }
}
