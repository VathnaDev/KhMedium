@model IEnumerable<KhMedium.Entities.Publication>
@using KhMedium.Utils
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutStart.cshtml";
}

@Html.ActionLink("បង្កើត", "Create", "Publications", new { @Class = "btn btn-info pull-right" })
<br />
<br />
<div class="box">
    <div class="box-header">
        <h3 class="box-title">បញ្ជីនៃសាធារណៈជន</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        <table id="dataTable" class="table table-bordered table-striped dataTable">
            <thead>

                <tr>
                    <th>លេខរៀង</th>
                    <th>ឈ្មោះ</th>
                    <th>ការពិពណ៌នា</th>
                    <th>ទំនាក់ទំនង</th>
@*                    <th>Avatar</th>*@
                    <th>រូបសញ្ញា</th>
@*                    <th>Create At</th>*@
@*                    <th>Update At</th>*@
                    <th style="width: 20%">សកម្មភាព</th>
                </tr>
            </thead>
            <tbody>
             
            @for (var i = 1; i <= Model.Count(); i++)
            {
                var item = Model.ToList()[i - 1];
                    <tr>
                        <td>@i</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.ContactInfo</td>
                        <td><img src="~/FileUpload/@item.Logo" width="30" height="30"/></td>
@*                        <td><img src="@StringUtils.GetFullImagePath(item.Cover)"  width="30" height="30"/></td>*@
@*                        <td>@item.CreatedAt</td>*@
@*                        <td>@item.UpdatedAt</td>*@
                       
                        <td class="text-center">
                            @Html.ActionLink("កែប្រែ", "Edits", new { id = item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("លុប", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <!-- /.box-body -->
</div>

@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "order": [[1, "asc"]]
        });
    });
</script>

