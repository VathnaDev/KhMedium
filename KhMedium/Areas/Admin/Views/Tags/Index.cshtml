@model IEnumerable<KhMedium.Entities.Tag>

@{
    Layout = "~/Areas/admin/Views/Shared/_AdminLayoutStart.cshtml";
}

@Html.ActionLink("Create", "Create", "Tags", new { @Class = "btn btn-info pull-right" })
<br />
<br />
<div class="box">
<div class="box-header">
    <h3 class="box-title">List of Tags</h3>
</div>
<!-- /.box-header -->
<div class="box-body">

    <table id="dataTableTags" class="table table-bordered table-striped dataTable">
        <thead>

            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Create At</th>
                <th style="width: 20%">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 1; i <= Model.Count(); i++)
            {
                var tag = Model.ToList()[i - 1];
                <tr>
                    <td>@i</td>
                    <td>@tag.Name</td>
                    <td>@tag.CreatedAt</td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edits", new { id = tag.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = tag.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<!-- /.box-body -->
</div>

@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function () {
        $('#dataTableTags').DataTable({
            "order": [[1, "asc"]]
        });
    });
</script>
