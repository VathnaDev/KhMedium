@model KhMedium.Models.ViewModel.CreateArticleViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    WebImage photo = null;
    var newFileName = "";
    var imagePath = "";

    if (IsPost)
    {
        photo = WebImage.GetImageFromRequest();

        if (photo != null)
        {
            newFileName = Guid.NewGuid().ToString() + "_" +
                          Path.GetFileName(photo.FileName);
            imagePath = @"images\" + newFileName;
            photo.Save(@"~\" + imagePath);
        }
    }

}
<style>
    .margin-top60 {
        margin-top: 60px;
    }

    .title {
        border: 0;
        box-shadow: none;
    }

        .title:focus {
            outline: none;
            border: 0;
            box-shadow: none;
        }

    .input-border-bottom {
        padding-bottom: 2px;
        border-bottom: 1px solid rgba(0, 0, 0, .15);
        padding: 0 0;
        margin-left: 15px;
        margin-right: 15px;
    }

    .form-control-plaintext {
        outline: 0;
        box-shadow: none;
    }

    label:focus {
        outline: 0 !important;
        -webkit-appearance: none;
    }

    input:focus {
        outline: 0 !important;
        -webkit-appearance: none;
    }

    .none-padding-left {
        padding-left: 0;
    }

    .btn-save {
        margin-top: 30px;
        margin-bottom: 30px;
        float: right !important;
        padding: 10px 30px;
        background: none;
        color: rgba(148, 0, 211, .7);
        border: 1px solid rgba(148, 0, 211, .7);
    }

        .btn-save:hover {
            color: rgb(148, 0, 211);
            border: 1px solid rgb(148, 0, 211);
        }

        .btn-save:focus {
            color: rgb(148, 0, 211);
            border: 1px solid rgb(148, 0, 211);
        }

    .btn-file {
        position: relative;
        overflow: hidden;
        background-color: rgb(148, 0, 211);
        color: white;
        margin: 10px 10px;
    }

        .btn-file input[type=file] {
            position: absolute;
            top: 0;
            right: 0;
            min-width: 100%;
            min-height: 100%;
            font-size: 100px;
            text-align: right;
            filter: alpha(opacity=0);
            opacity: 0;
            outline: none;
            background: white;
            cursor: inherit;
            display: block;
        }

    .topic {
        border: 1px solid #ced4da;
        margin-left: 15px;
        margin-right: 15px;
    }

    .margin-top30 {
        margin-top: 30px;
    }
</style>
@using (Html.BeginForm("CreateArticle", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <h1 class="col-md-12">បង្កើតអត្ថបទ</h1>
            <div class="col-md-12 form-group row margin-top60">
                <div class="col-md-12 input-border-bottom">
                    <input type="text" name="Title" class="form-control title" placeholder="ចំណងជើង">
                </div>
            </div>
            <div class="col-md-12">
                <label for="Image">រូបដំណាងអត្ថបទ</label>
                <span class="btn btn-default btn-file">
                    រកមើល <input type="file" name="ArticlesImage">
                </span>
                <label id="fileName"></label>
                <br />
            </div>
            @Html.DropDownListFor(x => Model.TopicId, new SelectList(Model.Topics, "Id", "Name"), htmlAttributes: new { @class = "form-control topic" })
            <div class="col-md-12 margin-top30">
                <textarea name="Content"></textarea>
            </div>
            <div class="col-md-12 none-padding-left  margin-top60">
                <button class="btn btn-save">រក្សាទុក</button>
            </div>
        </div>

    </div>
}
@Scripts.Render("~/bundles/jquery")
<script src="https://cdn.ckeditor.com/4.11.2/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('Content');
    $(document).ready(function () {
        $('input[type="file"]').change(function (e) {
            var fileName = e.target.files[0].name;
            $("#fileName").text(fileName);
        });
    });
</script>


