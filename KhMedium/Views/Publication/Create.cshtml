@using (Html.BeginForm("Create", "Publication", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="container mw1000">
        <div class="row">
            <div class="col-12 margin-top60">
                <h1>New Publication</h1>
            </div>
            <div class="col-12 form-group row margin-top60">
                <label for="Name" class="col-md-2 col-form-label">Name<span class="form-asterisk">*</span></label>
                <div class="col-md-10 input-border-bottom">
                    <input type="text" name="Name" class="form-control" placeholder="Type your publication's name">
                </div>
            </div>
            <div class="col-12 form-group row form-group-margin-top32">
                <label for="Description" class="col-sm-2 col-form-label">Description<span class="form-asterisk">*</span></label>
                <div class="col-sm-10 input-border-bottom">
                    <input type="text" name="Description" class="form-control" placeholder="Type a short description">
                </div>
            </div>
            <div class="col-12 form-group row form-group-margin-top32">
                <label for="avatar" class="col-sm-2 col-form-label">Publication Avatar<span class="form-asterisk">*</span></label>
                <div class="col-sm-5">
                    <div class="row">
                        <div class="col avatar-desc">
                            <h5>Add Image...</h5>
                        </div>
                        <div class="col avatar-desc avatar-desc-content">
                            <p>
                                This works like a user icon and appears in previews of your publication content throughout Medium. It is square and should be at least 60 Ã— 60px in size.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="js-avatarPreview">
                        @*                        <img type="button" id="btnAvatar" class="choose-image-button" />*@
                        <input type="file" id="Logo" name="Logo"/>
                    </div>
                </div>
            </div>
            <div class="col-12 form-group row form-group-margin-top32">
                <label for="avatar" class="col-sm-2 col-form-label">Publication Cover<span class="form-asterisk">*</span></label>
                <div class="col-sm-5">
                    <div class="row">
                        <div class="col avatar-desc">
                            <h5>Add Image...</h5>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="js-avatarPreview">
                        @*                        <input type="button" id="btnCover" class="choose-cover-button" />*@
                        <input type="file" id="cover" name="Cover"/>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <p class="form-hint">Items marked with * are required.</p>
            </div>
            @* <div class="col-12 form-group row form-group-margin-top32"> *@
            @*     <label for="tags" class="col-sm-2 col-form-label">Tags</label> *@
            @*     <div class="col-sm-10" style="padding-left: 0;"> *@
            @*         <div class="col-md-12"> *@
            @*             <input type="text" class="form-control" data-role="tagsinput"/> *@
            @*         </div> *@
            @*         <div class="col-md-12 margin-top12"> *@
            @*             <p class="form-hint">Adding tags (up to 5) allows people to search for and discover your publication.</p> *@
            @*         </div> *@
            @*     </div> *@
            @* </div> *@
            @*            <div class="col-12 form-group row form-group-margin-top32">*@
            @*                <label for="editors" class="col-sm-2 col-form-label">Editors</label>*@
            @*                <p class="col-sm-10 form-hint" style="padding-top: 6px;">Editors can review submissions, add stories, edit and publish submitted drafts, and remove any stories from this publication.</p>*@
            @*            </div>*@
            @*            <div class="col-12 form-group row form-group-margin-top32">*@
            @*                <label for="writers" class="col-sm-2 col-form-label">Writers</label>*@
            @*                <div class="col-sm-10 input-border-bottom">*@
            @*                    <input type="text" class="form-control" placeholder="Add or remove writers">*@
            @*                </div>*@
            @*            </div>*@
            <div class="col-md-12 none-padding-left  margin-top60">
                <button class="btn btn-save">Save</button>
            </div>
        </div>
    </div>
}
