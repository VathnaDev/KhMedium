@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .mw1000 { max-width: 1000px }

    .container.form { padding: 0; }

    .margin-top60 { margin-top: 60px; }

    .form.form--borderless { border: 0; }

    .form-row { margin: 30px 0; }

    .form-heading {
        letter-spacing: 0;
        font-weight: 600;
        font-style: normal;
    }

    .w-3of12 { width: 25% !important; }

    .form-asterisk {
        letter-spacing: 0;
        font-weight: 300;
        font-style: normal;
    }

    .w-9of12 {
        width: 75% !important;
        float: left !important
    }

    .editor-with-underline { padding-bottom: 4px; }

    .hide-out-line { outline: 0 !important }

    .min-height28 { min-height: 28px !important; }

    .editor-with-underline > p.graf--p {
        padding-bottom: 2px;
        border-bottom: 1px solid rgba(0, 0, 0, .15);
    }

    .editable > p { margin-bottom: 0; }

    .default-value { color: #b3b3b1; }

