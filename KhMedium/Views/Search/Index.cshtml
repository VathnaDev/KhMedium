        letter-spacing: 0;
        font-weight: 300;
        font-style: normal;
        font-size: 52px;
        height: 80px;
        padding: 0;
        width: 100%;
    }

    form {
        display: block;
        margin-top: 0em;
    }

    input[type=search] {
        -webkit-appearance: none;
        -webkit-box-sizing: content-box;
        box-sizing: content-box;
    }

    blockquote, dd, dl, figure, form, h1, h2, h3, h4, h5, h6, menu, ol, p, pre, ul { margin: 0; }

